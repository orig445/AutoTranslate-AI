{
  "manifest_version": 3,
  "name": "AutoTranslate",
  "version": "0.1.0",
  "description": "Instantly translates selected text with a hotkey using AI.",
  "permissions": ["activeTab", "scripting", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "translate-selection": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Translate selected text"
    }
  },
  "action": {
    "default_title": "Translate with AI"
  }
}
